@using BusinessLogicLayer.DTos.ContactDTos
@model ContactDetailsDto
@{
    ViewData["Title"] = "Contact Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string createdOn = Model.CreatedOn.ToString("MMM dd, yyyy HH:mm");
    string? lastModifiedOn = Model.LastModifiedOn?.ToString("MMM dd, yyyy HH:mm");

    string type = Model.ContactType?.Trim() ?? string.Empty;
    string value = Model.ContactValue?.Trim() ?? string.Empty;

    string? href = null;
    bool openInNewTab = false;

    if (!string.IsNullOrWhiteSpace(value))
    {
        switch (type.ToLowerInvariant())
        {
            case "email":
                href = $"mailto:{value}";
                break;

            case "phone":
            case "mobile":
            case "telephone":
                href = $"tel:{value}";
                break;

            case "website":
            case "url":
            case "linkedin":
            case "github":
            case "twitter":
            case "facebook":
            case "instagram":
            case "whatsapp":
            case "telegram":
                {
                    if (!value.StartsWith("http://", StringComparison.OrdinalIgnoreCase) &&
                        !value.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
                    {
                        href = $"https://{value}";
                    }
                    else
                    {
                        href = value;
                    }
                    openInNewTab = true;
                    break;
                }

            default:
                if (value.Contains("@") && !value.Contains(" "))
                {
                    href = $"mailto:{value}";
                }
                else if (value.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
                         value.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
                {
                    href = value; openInNewTab = true;
                }
                else if (value.StartsWith("www.", StringComparison.OrdinalIgnoreCase))
                {
                    href = $"https://{value}"; openInNewTab = true;
                }
                break;
        }
    }
}

<main class="main-content">
    <div class="container my-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between">
                            <div>
                                <h4 class="card-title mb-1">Contact Details</h4>
                            </div>
                            <div>
                                @if (Model.IsDeleted)
                                {
                                    <span class="badge bg-danger">Deleted</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row mb-0">
                                    <dt class="col-5">Contact Type</dt>
                                    <dd class="col-7">@Model.ContactType</dd>

                                    <dt class="col-5">Contact Value</dt>
                                    <dd class="col-7">
                                        @if (!string.IsNullOrWhiteSpace(href))
                                        {
                                            if (openInNewTab)
                                            {
                                                <a href="@href" target="_blank" rel="noopener">@Model.ContactValue</a>
                                            }
                                            else
                                            {
                                                <a href="@href">@Model.ContactValue</a>
                                            }
                                        }
                                        else
                                        {
                                            @Model.ContactValue
                                        }
                                    </dd>

                                    <dt class="col-5">Created By</dt>
                                    <dd class="col-7">@Model.CreatedBy</dd>
                                </dl>
                            </div>

                            <div class="col-md-6">
                                <dl class="row mb-0">
                                    <dt class="col-5">Created On</dt>
                                    <dd class="col-7">@createdOn</dd>

                                    <dt class="col-5">Last Modified By</dt>
                                    <dd class="col-7">@(!string.IsNullOrWhiteSpace(Model.LastModifiedBy) ? Model.LastModifiedBy : "-")</dd>

                                    <dt class="col-5">Last Modified On</dt>
                                    <dd class="col-7">@(!string.IsNullOrEmpty(lastModifiedOn) ? lastModifiedOn : "-")</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>

                            @if (Model.IsDeleted)
                            {
                                <form asp-action="Restore" asp-route-Id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning">Restore</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Delete" asp-route-Id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this contact?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

