@model UserDetailsViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="main-content">
    <div class="container py-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h1 class="h4 mb-0">Delete User</h1>
            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <ul class="nav nav-tabs card-header-tabs" id="userTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">
                            <i class="bi bi-person"></i> General
                        </a>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                        <div class="alert alert-warning d-flex align-items-start gap-2" role="alert">
                            <i class="bi bi-exclamation-triangle-fill fs-5"></i>
                            <div>
                                <strong>Warning:</strong> This action is permanent and cannot be undone.
                            </div>
                        </div>

                        <div class="border rounded p-3 mb-4 bg-body-secondary">
                            <div class="row g-3">
                                <partial name="UserPartialViews/DetailsDeleteUserPartialView" />
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@Model.Id">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="DeleteModal-@Model.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@Model.Id" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteModalLabel-@Model.Id">
                            <i class="bi bi-trash me-2"></i> Confirm Deletion
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-2">Are you sure you want to delete this user?</p>
                        <ul class="list-unstyled small mb-0">
                            <li><strong>Name:</strong> @Model.FullName</li>
                            <li><strong>Email:</strong> @Model.Email</li>
                            @if (Model.Roles?.Any() == true)
                            {
                                <li><strong>Roles:</strong> @string.Join(", ", Model.Roles)</li>
                            }
                        </ul>
                    </div>
                    <div class="modal-footer">
                        <form asp-action="DeleteConfirm" asp-controller="User" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>

