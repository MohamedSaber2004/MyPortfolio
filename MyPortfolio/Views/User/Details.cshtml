@model UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="main-content container-xxl">
    <!-- Page header with actions -->
    <div class="d-flex align-items-center justify-content-between gap-3 flex-wrap mt-4 mb-3">
        <h1 class="display-6 mb-0">User Details</h1>

        <div class="btn-toolbar ms-auto" role="toolbar" aria-label="User actions">
            <div class="btn-group" role="group">
                <a asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary text-white">Back to list</a>
            </div>
        </div>
    </div>

    <!-- Content card with tabs -->
    <div class="card shadow-sm">
        <div class="card-header p-0 border-0">
            <ul class="nav nav-tabs card-header-tabs px-3 pt-3" id="userTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">
                        General
                    </a>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content" id="userTabsContent">
                <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                    <div class="row g-4">
                        <div class="col-12">
                            <partial name="UserPartialViews/DetailsDeleteUserPartialView" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</main>

