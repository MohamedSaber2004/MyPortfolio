@model UserEditViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/user-edit.css" asp-append-version="true" />
}

<main class="main-content">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h1 class="h3 mb-0">Edit User</h1>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <form method="post" asp-controller="User" asp-action="Edit" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label fw-semibold"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="UserName" class="form-label fw-semibold"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3 col-md-6">
                                    <label class="form-label">Roles</label>
                                    <div class="d-flex flex-wrap gap-3">
                                        @for (int i = 0; i < Model.Roles.Count; i++)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       asp-for="Roles[@i].IsSelected"
                                                       type="checkbox"
                                                       id="role_@i" />
                                                <input type="hidden" asp-for="Roles[@i].RoleName" />
                                                <label class="form-check-label" for="role_@i">@Model.Roles[i].RoleName</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <button type="submit" class="btn btn-primary">Save changes</button>
                                <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

