@{
    ViewData["Title"] = "CheckYourInbox";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0">
                <div class="card-body p-4 text-center">
                    <div class="mb-3">
                        <i class="bi bi-envelope-check" style="font-size:2.5rem; color:#6366f1;"></i>
                    </div>
                    <h2 class="mb-3 text-primary">Check Your Inbox</h2>
                    <p class="mb-4">We've sent you an email with instructions to reset your password. Please check your inbox and follow the link provided.</p>
                    <a href="https://mail.google.com/mail/u/1/#inbox" target="_blank" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-box-arrow-up-right"></i> Go To Your Inbox
                    </a>
                    <div class="mt-3">
                        <a asp-action="Login" class="text-decoration-none text-secondary">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
