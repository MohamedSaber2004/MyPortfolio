@using MyPortfolio.Models.SocialLinkModels
@model SocialLinkViewModel
@{
    ViewData["Title"] = "Edit Social Link";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="main-content">
    <div class="page-header mb-4 d-flex align-items-center justify-content-between flex-wrap gap-2">
        <div>
            <h1 class="page-title mb-1">Edit Social Link</h1>
            <p class="page-subtitle mb-0">Update an existing social link.</p>
        </div>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (Model.IsDeleted)
    {
        <div class="alert alert-warning d-flex align-items-center gap-2">
            <i class="bi bi-exclamation-triangle-fill fs-5"></i>
            <div>
                This link is currently marked as deleted. You can modify and save to keep it archived, or restore it from the list.
            </div>
        </div>
    }

    <div class="card shadow border-0">
        <div class="card-body">
            <form asp-action="Edit"
                  asp-route-id="@Model.Id"
                  method="post"
                  autocomplete="off"
                  novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="IsDeleted" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="PlatformName" class="form-label"></label>
                        <input asp-for="PlatformName" class="form-control" />
                        <span asp-validation-for="PlatformName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="URL" class="form-label"></label>
                        <input asp-for="URL" class="form-control" />
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2 flex-wrap">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

