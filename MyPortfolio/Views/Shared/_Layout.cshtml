@{
    string? currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    string? currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool isAdmin = User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin");
    bool isAuthenticated = User?.Identity?.IsAuthenticated == true;
    string NavActive(string c, string? a = null) =>
        currentController == c && (a == null || currentAction == a) ? "active fw-semibold" : "";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPortfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body id="top">
    <div class="gradient-bar"></div>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom shadow-sm main-navbar">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <span class="badge bg-primary rounded-circle p-2">
                        <i class="bi bi-stack text-white"></i>
                    </span>
                    <span>MyPortfolio</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @NavActive("Home","Index")" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link @NavActive("Admin","Index")" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Admin
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="about">
                                <i class="bi bi-person"></i> About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="skills">
                                <i class="bi bi-lightning-charge"></i> Skills
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="experience">
                                <i class="bi bi-briefcase"></i> Experience
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="education">
                                <i class="bi bi-mortarboard"></i> Education
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="projects">
                                <i class="bi bi-kanban"></i> Projects
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="social">
                                <i class="bi bi-share"></i> Social
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="contact">
                                <i class="bi bi-envelope-at"></i> Contact
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <button id="themeToggle" class="btn btn-outline-secondary btn-sm theme-toggle-btn" type="button"
                                aria-label="Toggle theme" title="Toggle light/dark">
                            <i class="bi bi-moon-stars" id="themeIcon"></i>
                        </button>

                        @if (isAuthenticated)
                        {
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm px-3">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                            <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Global Footer -->
    <footer class="site-footer mt-auto pt-5">
        <div class="footer-top pb-4">
            <div class="container">
                <div class="row g-4">
                    <!-- Brand / About -->
                    <div class="col-12 col-md-4">
                        <h6 class="fw-semibold d-flex align-items-center gap-2 mb-3">
                            <span class="footer-accent-bar"></span>
                            <span>MyPortfolio</span>
                        </h6>
                        <p class="small mb-3 footer-desc">
                            Showcasing projects, experience, education, and skills. Built with ASP.NET Core, Bootstrap, and a modern theme toggle.
                        </p>
                        <a href="mailto:dev.mohamed104saber@gmail.com" class="btn btn-sm btn-outline-primary rounded-pill">
                            <i class="bi bi-envelope-at"></i> Email Me
                        </a>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-6 col-md-2">
                        <h6 class="text-uppercase small fw-semibold mb-3">Navigate</h6>
                        <ul class="list-unstyled small footer-links">
                            <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-chevron-right"></i> Home</a></li>
                            @if (isAdmin)
                            {
                                <li><a asp-controller="Admin" asp-action="Index"><i class="bi bi-chevron-right"></i> Admin</a></li>
                            }
                            <li><a href="#top" class="back-to-top-link"><i class="bi bi-chevron-up"></i> Back to Top</a></li>
                        </ul>
                    </div>

                    <!-- Contact -->
                    <div class="col-6 col-md-3">
                        <h6 class="text-uppercase small fw-semibold mb-3">Contact</h6>
                        <ul class="list-unstyled small footer-links">
                            <li>
                                <a href="mailto:dev.mohamed104saber@gmail.com">
                                    <i class="bi bi-envelope"></i> dev.mohamed104saber@gmail.com
                                </a>
                            </li>
                            <li>
                                <a href="http://linkedin.com/in/mohamed-saber-18097a2a4/" target="_blank" rel="noopener">
                                    <i class="bi bi-linkedin"></i> LinkedIn
                                </a>
                            </li>
                            <li>
                                <a href="https://github.com/Mohamedsaber45" target="_blank" rel="noopener">
                                    <i class="bi bi-github"></i> GitHub
                                </a>
                            </li>
                            <li>
                                <a href="/files/CV.pdf" target="_blank" rel="noopener">
                                    <i class="bi bi-file-earmark-person"></i> Résumé
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Social icons -->
                    <div class="col-12 col-md-3">
                        <h6 class="text-uppercase small fw-semibold mb-3">Follow</h6>
                        <div class="d-flex flex-wrap gap-2 social-icon-list">
                            <a class="social-icon-link" href="https://github.com/Mohamedsaber45" aria-label="GitHub" target="_blank" rel="noopener">
                                <i class="bi bi-github"></i>
                            </a>
                            <a class="social-icon-link" href="http://linkedin.com/in/mohamed-saber-18097a2a4/" aria-label="LinkedIn" target="_blank" rel="noopener">
                                <i class="bi bi-linkedin"></i>
                            </a>
                            <a class="social-icon-link" href="mailto:dev.mohamed104saber@gmail.com" aria-label="Email">
                                <i class="bi bi-envelope-fill"></i>
                            </a>
                        </div>
                        <div class="mt-3">
                            <button id="footerThemeToggle" type="button" class="btn btn-outline-secondary btn-sm rounded-pill">
                                <i class="bi bi-circle-half"></i> Theme
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-divider"></div>

        <div class="footer-bottom py-3">
            <div class="container small d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
                <div class="text-muted">
                    &copy; @DateTime.UtcNow.Year MyPortfolio. All rights reserved.
                </div>
                <div class="d-flex flex-wrap gap-3 align-items-center">
                    <span class="text-muted">
                        <i class="bi bi-clock-history"></i> UTC @DateTime.Now
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function () {
            const root = document.documentElement;
            const btn = document.getElementById('themeToggle');
            const icon = document.getElementById('themeIcon');
            const stored = localStorage.getItem('theme');
            if (stored) root.setAttribute('data-bs-theme', stored);

            function syncIcon() {
                const mode = root.getAttribute('data-bs-theme');
                icon.className = mode === 'dark' ? 'bi bi-sun-fill' : 'bi bi-moon-stars';
            }
            syncIcon();

            btn?.addEventListener('click', () => {
                const current = root.getAttribute('data-bs-theme') === 'dark' ? 'light' : 'dark';
                root.setAttribute('data-bs-theme', current);
                localStorage.setItem('theme', current);
                syncIcon();
            });

            // Footer theme toggle (mirrors main toggle)
            document.getElementById('footerThemeToggle')?.addEventListener('click', () => {
                const current = root.getAttribute('data-bs-theme') === 'dark' ? 'light' : 'dark';
                root.setAttribute('data-bs-theme', current);
                localStorage.setItem('theme', current);
                syncIcon();
            });

            // Smooth scroll for Back to Top (if present)
            document.querySelectorAll('.back-to-top-link').forEach(a => {
                a.addEventListener('click', (e) => {
                    if (a.getAttribute('href') === '#top') {
                        e.preventDefault();
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    }
                });
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
