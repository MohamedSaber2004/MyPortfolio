@using MyPortfolio.Models.ManagerModels.RoleModels
@model CreateEditRoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="main-content">
    <div class="container py-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h1 class="h3 mb-0">Edit Role</h1>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form method="post" asp-controller="Role" asp-action="Edit" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Context.Request.RouteValues["id"]" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                    <div class="row g-3">
                        <partial name="RolePartialViews/CreateEditRolePartialView" model="Model" />
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a asp-controller="Role" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

