@using BusinessLogicLayer.DTos.EducationDTos
@model EducationDetailsDto
@{
    ViewData["Title"] = "Education Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string startDate = Model.StartDate.ToString("MMM yyyy");
    string endDate = Model.EndDate.ToString("MMM yyyy");
    string createdOn = Model.CreatedOn.ToString("MMM dd, yyyy HH:mm");
    string? lastModifiedOn = Model.LastModifiedOn?.ToString("MMM dd, yyyy HH:mm");
    string duration = $"{startDate} - {endDate}";
    bool hasDescription = !string.IsNullOrWhiteSpace(Model.Description);
}

<main class="main-content">
    <div class="container my-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between flex-wrap gap-2">
                            <div>
                                <h3 class="mb-1">@Model.InstitutionName</h3>
                                <div class="text-muted">
                                    @Model.Degree
                                    @if (!string.IsNullOrWhiteSpace(Model.FieldOfStudy))
                                    {
                                        <span class="text-secondary"> &middot; @Model.FieldOfStudy</span>
                                    }
                                </div>
                                <div class="small text-muted mt-1">@duration</div>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                @if (Model.IsDeleted)
                                {
                                    <span class="badge bg-danger">Deleted</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back
                                </a>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-lg-8">
                                <h5 class="mb-3">Overview</h5>
                                @if (hasDescription)
                                {
                                    <p class="mb-0">@Model.Description</p>
                                }
                                else
                                {
                                    <p class="text-muted fst-italic mb-0">No description provided.</p>
                                }
                            </div>
                            <div class="col-lg-4">
                                <h5 class="mb-3">Metadata</h5>
                                <dl class="row mb-0 small">
                                    <dt class="col-5">Start</dt>
                                    <dd class="col-7">@startDate</dd>

                                    <dt class="col-5">End</dt>
                                    <dd class="col-7">@endDate</dd>

                                    <dt class="col-5">Created By</dt>
                                    <dd class="col-7">@Model.CreatedBy</dd>

                                    <dt class="col-5">Created On</dt>
                                    <dd class="col-7">@createdOn</dd>

                                    <dt class="col-5">Modified By</dt>
                                    <dd class="col-7">@(!string.IsNullOrWhiteSpace(Model.LastModifiedBy) ? Model.LastModifiedBy : "-")</dd>

                                    <dt class="col-5">Modified On</dt>
                                    <dd class="col-7">@(!string.IsNullOrEmpty(lastModifiedOn) ? lastModifiedOn : "-")</dd>
                                </dl>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex flex-wrap gap-2">
                            <a asp-action="Edit"
                                asp-route-Id="@Model.Id"
                                class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            @if (Model.IsDeleted)
                            {
                                <form asp-action="Restore" asp-route-Id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-arrow-counterclockwise"></i> Restore
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Delete"
                                        asp-route-Id="@Model.Id"
                                        method="post"
                                        class="d-inline"
                                        onsubmit="return confirm('Are you sure you want to delete this education record?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            }

                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-list"></i> All Records
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</main>

